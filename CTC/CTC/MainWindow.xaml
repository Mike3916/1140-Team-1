<Window x:Class="CTC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CTC"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="CTC" VerticalAlignment="Top"/>
        <Image HorizontalAlignment="Left" Height="240" Margin="78,118,0,0" VerticalAlignment="Top" Width="253" Source="/Red &amp; Green Line.png"/>
        <Button x:Name="LoadFile" Content="Load Track" HorizontalAlignment="Left" Margin="18,14,0,0" VerticalAlignment="Top" Click="LoadFile_Click" Initialized="LoadFile_Init"/>
        <Button x:Name="Dispatch" Content="Dispatch New Train" HorizontalAlignment="Left" Margin="679,397,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="SelectTrain" HorizontalAlignment="Left" Margin="583,69,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="SelectTrain_SelectionChanged" IsDropDownOpen="False"/>

    </Grid>
</Window>
