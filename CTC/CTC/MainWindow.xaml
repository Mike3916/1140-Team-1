<Window x:Class="CTC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CTC"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" Margin="0,3,0,0" TextWrapping="Wrap" Text="CTC" VerticalAlignment="Top" Height="16" Grid.Row="1" Width="20"/>
        <Image HorizontalAlignment="Left" Height="240" Margin="41,0,0,0" VerticalAlignment="Center" Width="253" Source="/Red &amp; Green Line.png" Grid.Row="1"/>
        <Button x:Name="LoadSchedule" Content="Load Schedule" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="LoadFile_Click" Height="20" Grid.Row="1" Width="81"/>
        <Button x:Name="Dispatch" Content="Dispatch New Train" HorizontalAlignment="Left" Margin="679,288,0,0" VerticalAlignment="Top" Click="Dispatch_Click" Grid.Row="1" Height="20" Width="106"/>
        <ComboBox x:Name="SelectTrain" HorizontalAlignment="Left" Margin="583,7,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="SelectTrain_SelectionChanged" IsDropDownOpen="False" Height="22" Grid.Row="1">
            <Image Height="100" Width="100"/>
        </ComboBox>
        <CheckBox x:Name="Mode" Content="Manual Mode" HorizontalAlignment="Left" Margin="517,288,0,0" VerticalAlignment="Top" Checked="Set_Checked" Grid.Row="1" Height="15" Width="94"/>
        <Frame x:Name="Frame" Content="" Grid.RowSpan="2" Height="Auto" Width="Auto" NavigationUIVisibility="Hidden" Visibility="Hidden"/>

    </Grid>
</Window>
