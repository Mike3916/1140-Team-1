        <Button x:Name="Right" Content="Right" HorizontalAlignment="Left" Margin="137,88,0,0" VerticalAlignment="Top" Height="31" Width="33" Background="#FF53E216" Click="Right_Click"/>
        <Button x:Name="Open" Content="Open" HorizontalAlignment="Left" Margin="137,144,0,0" VerticalAlignment="Top" Background="#FF27E340" Click="Open_Click"/>
        <Button x:Name="Close" Content="Close" HorizontalAlignment="Left" Margin="79,144,0,0" VerticalAlignment="Top" Click="Close_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="79,233,0,0" TextWrapping="Wrap" Text="Throughput:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="79,39,0,0" TextWrapping="Wrap" Text="Block: GA1" VerticalAlignment="Top"/>
