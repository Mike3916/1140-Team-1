        <TextBlock HorizontalAlignment="Left" Margin="53,0,0,0" TextWrapping="Wrap" Text="Unoccupied" VerticalAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="132,0,0,0" TextWrapping="Wrap" Text="Occupied" VerticalAlignment="Center"/>
        <Rectangle HorizontalAlignment="Left" Height="30" Margin="126,0,0,0" Stroke="Black" VerticalAlignment="Center" Width="68" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.611"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Label Content="3" HorizontalAlignment="Left" Margin="154,228,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.254,-0.055"/>
    </Grid>
</Page>
