<Window x:Class="TrainController.EngineerPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainController"
        mc:Ignorable="d"
        Title="Engineer's Panel" Height="302" Width="382" Activated="EngineersPanelActive">
    <Grid>
        <TextBlock x:Name="DisplayKp" TextWrapping="Wrap" Text="Change Kp:" Margin="58,42,0,0" Background="#FFFFFF64" TextAlignment="Center" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" Height="83" Width="263"/>
        <TextBlock x:Name="DisplayKi" TextWrapping="Wrap" Text="Change Ki:" Margin="58,168,0,0" Background="#FFFFFF64" TextAlignment="Center" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" Height="73" Width="263"/>
        <TextBox x:Name="Kp" TextWrapping="Wrap" Text="0" Margin="110,93,0,0" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Width="164" KeyDown="KeyDownButton"/>
        <TextBox x:Name="Ki" TextWrapping="Wrap" Text="0" Margin="110,213,0,0" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Width="164" KeyDown="KeyDownButton"/>

    </Grid>
</Window>
