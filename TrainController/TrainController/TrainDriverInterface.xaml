<Window x:Class="TrainController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainController"
        mc:Ignorable="d"
        Title="Train Driver Interface" Height="472" Width="799">
    <Grid>
        <Label Content="Authority and Brakes" HorizontalAlignment="Left" Margin="50,20,0,0" VerticalAlignment="Top" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" Width="200" FontSize="15" HorizontalContentAlignment="Center"/>
        <Label Content="Controls" HorizontalAlignment="Left" Margin="300,20,0,0" VerticalAlignment="Top" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" Width="200" FontSize="15" HorizontalContentAlignment="Center"/>
        <Label Content="Non-Vitals" HorizontalAlignment="Left" Margin="550,20,0,0" VerticalAlignment="Top" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" Width="200" FontSize="15" HorizontalContentAlignment="Center"/>

        <TextBlock HorizontalAlignment="Left" Margin="41,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="60" Width="218" Background="#FF64E164" FontSize="20" TextAlignment="Center"><Run Text="Current Authority:"/><LineBreak/><Run/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="41,165,0,0" TextWrapping="Wrap" Text="Cmd Authority:" VerticalAlignment="Top" Height="60" Width="218" Background="#FF64E164" FontSize="20" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="41,80,0,0" TextWrapping="Wrap" Text="Service Brakes:" VerticalAlignment="Top" Height="70" Width="218" Background="#FFFF5A5A" FontSize="20" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="280,140,0,0" TextWrapping="Wrap" Text="Current Speed:" VerticalAlignment="Top" Height="119" Width="238" Background="#FF64E164" FontSize="32" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="280,350,0,0" TextWrapping="Wrap" Text="       Power:" VerticalAlignment="Top" Height="32" Width="238" Background="#FF64E164" FontSize="18" TextAlignment="Left"/>
        <TextBlock HorizontalAlignment="Left" Margin="280,272,0,0" TextWrapping="Wrap" Text="Cmd Speed:" VerticalAlignment="Top" Height="62" Width="109" Background="#FF64E164" FontSize="18" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="540,322,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="60" Width="220" Background="#FF64E164" FontSize="20" TextAlignment="Center"><Run Text="Nearest Beacon:"/><LineBreak/><Run/></TextBlock>
        <TextBlock x:Name="Temperature" HorizontalAlignment="Left" Margin="540,254,0,0" TextWrapping="Wrap" Text="Temperature: 72°F" VerticalAlignment="Top" Height="54" Width="109" Background="#FF57F1D9" FontSize="16" TextAlignment="Center"/>
        <TextBlock x:Name="SetSpeed" HorizontalAlignment="Left" Margin="410,272,0,0" TextWrapping="Wrap" Text="Set Speed:" VerticalAlignment="Top" Height="62" Width="109" Background="#FFFFDF20" FontSize="18" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="290,303,0,0" TextWrapping="Wrap" Text="0 mph" VerticalAlignment="Top" Background="White" Height="18" Width="88" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="102,273,0,0" TextWrapping="Wrap" Text="0 blocks" VerticalAlignment="Top" Background="White" Height="18" Width="96" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="102,200,0,0" TextWrapping="Wrap" Text="0 blocks" VerticalAlignment="Top" Background="White" Height="16" Width="96" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="335,195,0,0" TextWrapping="Wrap" Text="0 mph" VerticalAlignment="Top" Background="White" Height="50" Width="125" FontSize="28" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="594,353,0,0" TextWrapping="Wrap" Text="Mt. Washington" VerticalAlignment="Top" Background="White" TextAlignment="Center" Width="111"/>
        <TextBlock HorizontalAlignment="Left" Margin="410,357,0,0" TextWrapping="Wrap" Text="0 kW" VerticalAlignment="Top" Background="White" Width="90" TextAlignment="Center"/>
        <TextBlock x:Name="SelectType" HorizontalAlignment="Left" Margin="41,391,0,0" TextWrapping="Wrap" Text="Select Controller Type" VerticalAlignment="Top" Height="27" Width="218" Background="#FFDADADA" FontSize="16" TextAlignment="Center"/>

        <Slider x:Name="ServiceBrake" HorizontalAlignment="Left" Margin="50,115,0,0" VerticalAlignment="Top" Width="200" Height="20"/>

        <Button x:Name="AutoMode" Click="Button_Click" ClickMode="Press" Content="Automatic Mode" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="290,81,0,0" Height="43" Width="100"/>
        <Button x:Name="ManualMode" Click="Button_Click" ClickMode="Press" Content="Manual Mode" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="408,81,0,0" Height="43" Width="100"/>
        <Button x:Name="EmergencyBrake" Click="Button_Click" ClickMode="Press" Content="Emergency Brake" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="41,317,0,0" Height="65" Width="218" Background="#FFFF5A5A" FontSize="20"/>
        <Button x:Name="LeftDoors" Click="Button_Click" ClickMode="Press" Content="Doors - Left&#xa;  (CLOSED)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="540,80,0,0" Height="44" Width="100" Background="#FFDC8CFA"/>
        <Button x:Name="RightDoors" Click="Button_Click" ClickMode="Press" Content="Doors - Right&#xa;   (CLOSED)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="660,80,0,0" Height="44" Width="100" Background="#FFDC8CFA" FontWeight="Normal"/>
        <Button x:Name="LightsInterior" Click="Button_Click" ClickMode="Press" Content="Lights - Interior&#xa;        (OFF)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="540,141,0,0" Height="40" Width="100" Background="#FFDC8CFA"/>
        <Button x:Name="LightsExterior" Click="Button_Click" ClickMode="Press" Content="Lights - Exterior&#xa;        (OFF)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="660,141,0,0" Height="40" Width="100" Background="#FFDC8CFA"/>
        <Button x:Name="Announcements" Click="Button_Click" ClickMode="Press" Content="Announcements" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="540,195,0,0" Height="43" Width="220" Background="#FFDC8CFA"/>
        <Button x:Name="TempIncrease" Click="Button_Click" ClickMode="Press" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="665,263,0,0" Height="36" Width="40" FontSize="20"/>
        <Button x:Name="TempDecrease" Click="Button_Click" ClickMode="Press" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="720,263,0,0" Height="36" Width="40" FontSize="20"/>

        <Button x:Name="EngineerPanel" Click="Button_Click" ClickMode="Press" Content="Open Engineer's Panel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="280,390,0,0" Height="28" Width="240" FontSize="16"/>
        <Button x:Name="TestPanel" Click="Button_Click" ClickMode="Press" Content="Open Test Panel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="540,390,0,0" Height="28" Width="220" FontSize="16"/>

        <TextBox x:Name="SetSpeedBox" HorizontalAlignment="Left" Margin="420,303,0,0" TextWrapping="Wrap" Text="0 mph" VerticalAlignment="Top" Width="89" TextAlignment="Center"/>

    </Grid>
</Window>
